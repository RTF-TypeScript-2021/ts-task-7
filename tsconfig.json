{
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "src/task-1/specs"
    ],
    "compilerOptions": {
        "target": "es6",
        "module": "AMD",
        "lib": [
            "es6",
            "dom"
        ],
        "allowJs": false,
        "outDir": "dist",
        "rootDir": ".",
        "strict": false,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "experimentalDecorators": true
    }
}
