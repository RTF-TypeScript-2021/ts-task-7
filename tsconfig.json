{
    "include": [
        "./src/**/*",
        "node_modules/reflect-metadata"
    ],
    "exclude": [
        "node_modules",
        "src/task-2/specs"
    ],
    "compilerOptions": {
        "target": "es6",
        "module": "amd",
        "lib": [
            "es6",
            "dom"
        ],
        "allowJs": false,
        "outDir": "dist",
        "rootDir": ".",
        "strict": false,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true
    }
}
